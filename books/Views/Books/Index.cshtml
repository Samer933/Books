@model IEnumerable<books.Models.Books>

<h2 class="text-primary">Books</h2>

<hr />

@Html.ActionLink("Add books", "Create", "Books", null, new { @class = "nav-link" })
<hr />

<div class="control-form">
    @if (Model != null && Model.Any())
    {
        <table class="table">
            <tr>
                <th>Title</th>
                <th>Author</th>
                <th>Category</th>
                <th>Description</th>
                <th>Added On</th>
                <th>Action</th>
            </tr>

            @foreach (var book in Model)
            {
                <tr>
                    <td>@Html.ActionLink(book.Title,"Details","Books",new {id=book.Id},new {@class="nav-link"})</td>
                    <td>@book.Author</td>
                    <td>@book.Category.Name</td>
                    <td>@book.Description</td>
                    <td>@book.AddOn</td>
                    <td>
                        @Html.ActionLink("Edit book", "Edit", "Books", new {id=book.Id}, new { @class = "nav-link" })
                        @Html.ActionLink("Delete book", "Delete", "Books", new {id=book.Id }, new { @class = "nav-link" })
                    </td>
                </tr>
            }
        </table>
    }
    else
    {
        <div class="alert alert-warning">No Books Added Yet!</div>
    }
</div>